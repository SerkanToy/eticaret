@page "~/offer"
@model eticaret.Pages.Offer.OfferModel
@{
}

@(await Html.RenderComponentAsync<eticaret.Pages.Shared.Components.Breadcrumb.BreadcrumbComponent>(RenderMode.WebAssemblyPrerendered, new { Title = "Sizin İçin", Titles = new List<string> { "Sizin İçin" } }))

<!-- Offer -->
<section class="section-offer padding-tb-50">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title bb-center" data-aos="fade-up" data-aos-duration="1000"
                     data-aos-delay="200">
                    <div class="section-detail">
                        <h2 class="bb-title">Sizin<span> İçin</span></h2>
                        <p>Sizin için indirimlerimiz.</p>
                    </div>
                </div>
            </div>

            @if (Model.productViewModel.Any())
            {
                foreach (var item in Model.productViewModel)
                {
                    <div class="col-xl-3 col-md-4 col-6 mb-24 bb-product-box" data-aos="fade-up" data-aos-duration="1000"
                         data-aos-delay="200">
                        <div class="bb-pro-box">
                            <div class="bb-pro-img">
                                <a href="javascript:void(0)">
                                    <div class="inner-img">
                                        @if (item.Images.Count() != 0)
                                        {
                                            foreach (var img in item.Images)
                                            {
                                                <a href="javascript:void(0)">
                                                    <div class="inner-img">
                                                        <img class="main-img" src="assets/img/new-product/@img.Name" alt="@img.Name">
                                                        <img class="hover-img" src="assets/img/new-product/@img.Name" alt="@img.Name">
                                                    </div>
                                                </a>
                                            }
                                        }
                                        else
                                        {
                                            <a href="javascript:void(0)">
                                                <div class="inner-img">
                                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="rgba(173,184,194,1)">
                                                        <path d="M5 11.1005L7 9.1005L12.5 14.6005L16 11.1005L19 14.1005V5H5V11.1005ZM5 13.9289V19H8.1005L11.0858 16.0147L7 11.9289L5 13.9289ZM10.9289 19H19V16.9289L16 13.9289L10.9289 19ZM4 3H20C20.5523 3 21 3.44772 21 4V20C21 20.5523 20.5523 21 20 21H4C3.44772 21 3 20.5523 3 20V4C3 3.44772 3.44772 3 4 3ZM15.5 10C14.6716 10 14 9.32843 14 8.5C14 7.67157 14.6716 7 15.5 7C16.3284 7 17 7.67157 17 8.5C17 9.32843 16.3284 10 15.5 10Z">
                                                        </path>
                                                    </svg>
                                                </div>
                                            </a>
                                        }
                                    </div>
                                </a>

                                @(await Html.RenderComponentAsync<eticaret.Pages.Shared.Components.Pro.ProactionsComponent>(RenderMode.ServerPrerendered, new { ProductId = item.Id.ToString(), Flag = item.Flag }))

                            </div>
                            <div class="bb-pro-contact">
                                <div class="bb-pro-subtitle">
                                    <a href="shop-left-sidebar-col-3.html">@item.Category.Name</a>
                                    <span class="bb-pro-rating">
                                        @for (var v = 1; v != 6; v++)
                                        {
                                            if (v > item.RatinMax)
                                            {
                                                <i class="ri-star-line"></i>
                                            }
                                            else
                                            {
                                                <i class="ri-star-fill"></i>
                                            }
                                        }
                                    </span>
                                </div>
                                <h4 class="bb-pro-title">
                                    <a href="product-left-sidebar.html">
                                        @item.Name
                                    </a>
                                </h4>
                                <div class="bb-price">
                                    <div class="inner-price">
                                        @if (item.NewPrice == 0)
                                        {
                                            <span class="new-price">@item.OldPrice</span>
                                        }
                                        else
                                        {
                                            <span class="new-price">@item.NewPrice</span>
                                            <span class="old-price">@item.OldPrice</span>
                                        }
                                    </div>
                                    <span class="last-items">500g</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>


