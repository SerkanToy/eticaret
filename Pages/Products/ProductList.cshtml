@page "~/product-list/{flag?}"
@model eticaret.Pages.Products.ProductListModel
@{
}

@(await Html.RenderComponentAsync<eticaret.Pages.Shared.Components.Breadcrumb.BreadcrumbComponent>(RenderMode.ServerPrerendered, new { Title = $"Ürün Listesi", Titles = new List<string> { "Ürünler" } }))
@(await Html.RenderComponentAsync<eticaret.Pages.Shared.Components.ShopCategory.ShopcategoryComponent>(RenderMode.ServerPrerendered))

<section class="section-shop padding-b-50">
    <div class="container">
        <div class="row mb-minus-24">
            <div class="col-lg-9 col-12 mb-24">
                <div class="bb-shop-pro-inner">
                    <div class="row mb-minus-24">
                        <div class="col-12">
                            <div class="bb-pro-list-top">
                                <div class="row">
                                    <div class="col-6">
                                        <div class="bb-bl-btn">
                                            <button type="button" class="grid-btn btn-grid-100 active">
                                                <i class="ri-apps-line"></i>
                                            </button>
                                            <button type="button" class="grid-btn btn-list-100">
                                                <i class="ri-list-unordered"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="bb-select-inner">
                                            <div class="custom-select">
                                                <select>
                                                    <option selected disabled>Sort by</option>
                                                    <option value="1">Position</option>
                                                    <option value="2">Relevance</option>
                                                    <option value="3">Name, A to Z</option>
                                                    <option value="4">Name, Z to A</option>
                                                    <option value="5">Price, low to high</option>
                                                    <option value="6">Price, high to low</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        @if (Model.productExpandoObject.Any())
                        {
                            foreach (var item in Model.productExpandoObject)
                            {
                                <div class="col-xl-3 col-lg-4 col-6 mb-24 bb-product-box pro-bb-content" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="200">
                                    <div class="bb-pro-box">
                                        <div class="bb-pro-img">
                                            @(await Html.RenderComponentAsync<eticaret.Pages.Shared.Components.News.NewComponent>(RenderMode.ServerPrerendered))
                                            @(await Html.RenderComponentAsync<eticaret.Pages.Shared.Components.ProductImg.ImgComponent>(RenderMode.ServerPrerendered))
                                            @(await Html.RenderComponentAsync<eticaret.Pages.Shared.Components.Pro.ProactionsComponent>(RenderMode.ServerPrerendered))
                                        </div>
                                        <div class="bb-pro-contact">
                                            <div class="bb-pro-subtitle">
                                                @{
                                                    var i = 0;
                                                    foreach (var a in item.Category)
                                                    {
                                                        if (i < 1)
                                                        {
                                                            i++;
                                                            <a href="shop-left-sidebar-col-3.html">@a.Name</a>
                                                        }
                                                        break;
                                                    }
                                                }
                                                
                                                <span class="bb-pro-rating">
                                                    @for (var v = 1; v != 6; v++)
                                                    {
                                                        if (v > item.RatinMax)
                                                        {
                                                            <i class="ri-star-line"></i>
                                                        }
                                                        else
                                                        {
                                                            <i class="ri-star-fill"></i>
                                                        }
                                                        
                                                        @*@(await Html.RenderComponentAsync<eticaret.Pages.Shared.Components.Ratings.RatingComponent>(RenderMode.ServerPrerendered, new { yes = v.ratin }))*@
                                                    }
                                                </span>
                                            </div>
                                            <h4 class="bb-pro-title">
                                                <a href="product-left-sidebar.html">@item.Name</a>
                                            </h4>
                                            <p>
                                                @*@foreach (var a in item.Category)
                                                {
                                                    <text>@a.Name</text>
                                                }*@
                                                Lorem ipsum dolor sit amet, consectetur adipisicing elit. Cumque consectetur
                                                sit mollitia nihil magnam
                                                perspiciatis eos atque qui cupiditate delectus. Provident totam optio
                                                sapiente nam.
                                            </p>
                                            <div class="bb-price">
                                                <div class="inner-price">
                                                    <span class="new-price">$15</span>
                                                    <span class="old-price">$22</span>
                                                </div>
                                                <span class="last-items">500g</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }

                        <div class="col-12">
                            <div class="bb-pro-pagination">
                                <p>Showing 1-12 of 21 item(s)</p>
                                <ul>
                                    <li>
                                        <a href="javascript:void(0)" class="next">Geri <i class="ri-arrow-right-s-line"></i></a>
                                    </li>
                                    <li class="active">
                                        <a href="javascript:void(0)">1</a>
                                    </li>
                                    <li>
